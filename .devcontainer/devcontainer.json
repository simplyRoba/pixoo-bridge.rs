{
  "name": "rust-node-opencode-docker",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    // Node LTS installed via devcontainer feature
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    },
    // Rust stable + rust-analyzer installed via devcontainer feature
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "stable",
      "components": "rust-analyzer"
    },
    // Docker CLI installed; dind=true to enable Docker-in-Docker
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "dind": true
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "github.vscode-github-actions"
      ]
    }
  },
  "remoteUser": "vscode",
  "containerEnv": {
    "OPENSPEC_TELEMETRY": "0",
    "DO_NOT_TRACK": "1"
  },
  // Install global npm tools and initialize starship after container creation
  "postCreateCommand": "npm install -g opencode-ai @fission-ai/openspec && grep -qxF 'eval \"$(starship init bash)\"' ~/.bashrc || echo 'eval \"$(starship init bash)\"' >> ~/.bashrc",
  // Update global npm tools every time the container starts
  "initializeCommand": "npm update -g opencode-ai @fission-ai/openspec"
}
